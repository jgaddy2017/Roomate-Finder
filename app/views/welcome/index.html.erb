
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="Roommate Finder">
	<meta name="Conor&Smith" content="Roommate Finder">

	<title>Roommate Finder</title>

	<!--connect bootstrap -->
	<link href="css/bootstrap.min.css" rel="stylesheet">

	<link href="css/landing-page.css" rel="stylesheet">

	<!-- load some fonts -->
	<link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

</head>

<body>
	<nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
		<div class="container topnav">

			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand topnav" href="#">Find Your Roommate</a>
			</div>

			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav navbar-right">
					<li>
						<a href="#about">Apartments</a>
					</li>
					<li>
						<a href="#services">Friends</a>
					</li>
					<li>
						<a href="#contact">Messenger</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<!-- header -->
	<a name="about"></a>
	<div class="intro-header">
		<div class="container">

			<div class="row">
				<div class="col-lg-12">
					<div class="intro-message">
						<%= form_tag("/welcome", method: "post") do %>
						<h1>Roommate Finder</h1>
						<h3>Find</h3>
						<hr class="intro-divider">
						<ul class="list-inline intro-social-buttons">
							<li>
								<button type="submit" id="logIn" name="logIn" class="btn btn-default btn-lg"> Log In </button>
							</li>
						<% end %>

						<%= form_tag("/welcome/new", method: "get") do %>
							<li>
								<button type="submit" id="signUp" name="signUp" class="btn btn-default btn-lg">Sign Up</button>
							</li>
						<% end %>
						</ul>
					</div>
				</div>
			</div>

		</div>
		<!-- /.container -->




</body>
</html>